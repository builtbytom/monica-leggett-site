---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getHomepageContent } from '../lib/sanity.js';

const homepageData = await getHomepageContent();
---

<BaseLayout title="Home">

  <!-- Hero Carousel -->
  <section class="relative bg-gradient-to-br from-monica-navy/20 via-monica-teal/15 to-monica-sage/10 py-20 overflow-hidden">
    <!-- Decorative Background Elements -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-monica-teal"></div>
      <div class="absolute bottom-20 right-20 w-24 h-24 rounded-full bg-monica-sage"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 rotate-45 bg-monica-navy"></div>
      <div class="absolute bottom-10 left-1/3 w-20 h-20 rounded-full bg-monica-teal"></div>
    </div>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Carousel Container -->
      <div id="hero-carousel" class="relative min-h-[600px]">
        
        <!-- Slide 1: Book / Main (CMS Connected) -->
        <div class="hero-slide active" data-slide="0">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="relative">
              <!-- Logo and Tagline -->
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 mr-4 flex items-center justify-center bg-monica-navy/10 rounded-full">
                  <svg class="w-8 h-8 text-monica-navy" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-semibold text-monica-navy">Monica Leggett</div>
                  <div class="text-xs text-monica-teal italic">Dream it, plan it, do it, live it!</div>
                </div>
              </div>

              <h1 class="text-4xl md:text-6xl font-serif font-bold mb-4">
                <span class="text-monica-dark">{homepageData.hero.title}</span>
                <span class="text-monica-teal block text-5xl md:text-7xl">{homepageData.hero.subtitle}</span>
              </h1>
              <p class="text-lg text-monica-light mb-8 leading-relaxed">
                {homepageData.hero.description}
              </p>
              
              <!-- Enhanced CTAs -->
              <div class="flex flex-wrap gap-4">
                <a href={homepageData.hero.primaryLink} class="bg-gradient-to-r from-monica-navy to-monica-teal text-white px-8 py-4 rounded-lg font-bold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
                  {homepageData.hero.primaryCTA}
                </a>
                <a href={homepageData.hero.secondaryLink} class="bg-white text-monica-navy px-8 py-4 rounded-lg font-semibold text-lg border-2 border-monica-navy hover:bg-monica-navy hover:text-white transition-all duration-300 shadow-lg">
                  {homepageData.hero.secondaryCTA}
                </a>
              </div>
            </div>
            
            <!-- Enhanced Book Presentation -->
            <div class="relative flex items-center justify-center">
              <!-- Decorative circles behind book -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-96 h-96 rounded-full bg-gradient-to-br from-monica-teal/20 to-monica-sage/20 animate-pulse"></div>
              </div>
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-80 h-80 rounded-full bg-gradient-to-br from-monica-navy/10 to-monica-teal/10"></div>
              </div>
              
              <!-- Book with enhanced presentation -->
              <div class="relative transform hover:scale-105 transition-transform duration-300">
                <img 
                  src="/images/doubtful-to-decisive-book.png" 
                  alt="Doubtful to Decisive book cover"
                  class="w-auto h-[500px] drop-shadow-2xl relative z-10"
