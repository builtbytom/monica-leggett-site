---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAboutPageContent } from '../lib/sanity.js';

const aboutData = await getAboutPageContent();
---

<BaseLayout title="About Monica">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-monica-bg to-white py-12 lg:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <!-- Centered Title Section -->
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-serif font-bold text-monica-navy mb-4">
            {aboutData.heroTitle}
          </h1>
          <p class="text-xl text-monica-teal font-medium mb-2">
            {aboutData.heroSubtitle}
          </p>
          <p class="text-lg text-monica-dark italic">
            {aboutData.heroMotto}
          </p>
        </div>

        <!-- Content Grid -->
        <div class="grid lg:grid-cols-3 gap-8 items-start">
          <!-- Left Column - Image -->
          <div class="lg:col-span-1">
            <div class="relative max-w-sm mx-auto lg:mx-0">
              <div class="absolute inset-0 bg-gradient-to-br from-monica-navy to-monica-teal rounded-lg transform rotate-2"></div>
              <img 
                src="/images/monica-leggett-portrait.jpg" 
                alt="Monica Leggett"
                class="relative rounded-lg shadow-xl w-full"
                data-cms-image="about-hero-image"
              >
              <div class="mt-4 bg-white rounded-lg shadow-lg p-4">
                <p class="text-2xl font-serif font-bold text-monica-navy text-center">{aboutData.heroStatTitle}</p>
                <p class="text-sm text-monica-light text-center">{aboutData.heroStatDescription}</p>
              </div>
            </div>
          </div>

          <!-- Right Column - Text Content -->
          <div class="lg:col-span-2 space-y-6">
            <div class="prose prose-lg text-monica-light max-w-none">
              {aboutData.heroDescription.split('\n').map(paragraph => paragraph.trim() && (
                <p set:html={paragraph} />
              ))}
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="text-center p-4 bg-white rounded-lg shadow">
                <p class="text-2xl font-bold text-monica-navy">{aboutData.stat1Number}</p>
                <p class="text-sm text-monica-light">{aboutData.stat1Label}</p>
              </div>
              <div class="text-center p-4 bg-white rounded-lg shadow">
                <p class="text-2xl font-bold text-monica-navy">{aboutData.stat2Number}</p>
                <p class="text-sm text-monica-light">{aboutData.stat2Label}</p>
              </div>
              <div class="text-center p-4 bg-white rounded-lg shadow">
                <p class="text-2xl font-bold text-monica-navy">{aboutData.stat3Number}</p>
                <p class="text-sm text-monica-light">{aboutData.stat3Label}</p>
              </div>
              <div class="text-center p-4 bg-white rounded-lg shadow">
                <p class="text-2xl font-bold text-monica-navy">{aboutData.stat4Number}</p>
                <p class="text-sm text-monica-light">{aboutData.stat4Label}</p>
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-wrap gap-4">
              <a href="/contact#consultation" class="btn-primary inline-flex items-center">
                <span>Start Your Journey</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <a href="/learning-center" class="btn-secondary inline-flex items-center">
                <span>Explore Resources</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
