  /* Modern Journey Cards */
  .journey-card {
    position: relative;
    padding: 2rem;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(26, 60, 93, 0.08);
    border: 1px solid rgba(26, 60, 93, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .journey-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #209697, #98B966);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .journey-card:hover {
    transform: translateY(-8px) rotate(1deg);
    box-shadow: 0 20px 40px rgba(26, 60, 93, 0.15);
    border-color: rgba(32, 150, 151, 0.3);
  }

  .journey-card:hover::before {
    transform: scaleX(1);
  }

  .journey-card:nth-child(even):hover {
    transform: translateY(-8px) rotate(-1deg);
  }

  .journey-icon-container {
    position: relative;
    width: 80px;
    height: 80px;
    margin-bottom: 1.5rem;
  }

  .journey-icon {
    position: relative;
    z-index: 2;
    font-size: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .journey-icon-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(32, 150, 151, 0.1) 0%, rgba(152, 185, 102, 0.1) 100%);
    border-radius: 50%;
    transform: scale(0.8);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .journey-card:hover .journey-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .journey-card:hover .journey-icon-bg {
    transform: scale(1);
    opacity: 1;
  }

  .journey-card:nth-child(even):hover .journey-icon {
    transform: scale(1.1) rotate(-5deg);
  }

  /* Staggered animation entrance */
  .journey-card:nth-child(1) { animation-delay: 0.1s; }
  .journey-card:nth-child(2) { animation-delay: 0.2s; }
  .journey-card:nth-child(3) { animation-delay: 0.3s; }
  .journey-card:nth-child(4) { animation-delay: 0.4s; }
</style>