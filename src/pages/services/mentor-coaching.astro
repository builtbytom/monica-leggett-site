<style>
  @keyframes slide-in-up {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .animate-slide-in-up {
    animation: slide-in-up 0.6s ease-out forwards;
  }

  /* Program Cards */
  .program-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(26, 60, 93, 0.08);
    border: 1px solid rgba(26, 60, 93, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    position: relative;
  }

  .program-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #209697, #98B966);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .program-card:hover {
    transform: translateY(-8px) rotate(1deg);
    box-shadow: 0 20px 40px rgba(26, 60, 93, 0.15);
    border-color: rgba(32, 150, 151, 0.3);
  }

  .program-card:hover::before {
    transform: scaleX(1);
  }

  .program-card:nth-child(even):hover {
    transform: translateY(-8px) rotate(-1deg);
  }

  .program-card-header {
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
  }

  .program-card-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform: scale(0);
  }

  .program-card:hover .program-card-header::before {
    transform: scale(1);
  }

  .program-icon-container {
    position: relative;
    width: 80px;
    height: 80px;
    margin-bottom: 1.5rem;
  }

  .program-icon {
    position: relative;
    z-index: 2;
    font-size: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .program-icon-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: scale(0.8);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .program-card:hover .program-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .program-card:hover .program-icon-bg {
    transform: scale(1);
    opacity: 1;
  }

  .program-card:nth-child(even):hover .program-icon {
    transform: scale(1.1) rotate(-5deg);
  }

  /* Competency Cards */
  .competency-card {
    position: relative;
    padding: 2rem;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(26, 60, 93, 0.08);
    border: 1px solid rgba(26, 60, 93, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    text-align: center;
  }

  .competency-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #209697, #98B966);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .competency-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(26, 60, 93, 0.15);
    border-color: rgba(32, 150, 151, 0.3);
  }

  .competency-card:hover::before {
    transform: scaleX(1);
  }

  .competency-icon-container {
    position: relative;
    width: 70px;
    height: 70px;
    margin: 0 auto 1.5rem auto;
  }

  .competency-icon {
    position: relative;
    z-index: 2;
    font-size: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .competency-icon-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(32, 150, 151, 0.15) 0%, rgba(152, 185, 102, 0.15) 100%);
    border-radius: 50%;
