  }
  
  .carousel-dot:hover:not(.active) {
    @apply bg-monica-light/50;
  }
  
  .service-label {
    @apply text-monica-light hover:text-monica-navy transition-colors;
  }
  
  .service-label.active {
    @apply text-monica-navy;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.getElementById('hero-carousel');
    const slides = document.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    const labels = document.querySelectorAll('.service-label');
    let currentSlide = 0;
    let interval: number;
    let touchStartX = 0;
    let touchEndX = 0;
    
    function showSlide(index: number) {
      // Hide all slides
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      labels.forEach(label => label.classList.remove('active'));
      
      // Show selected slide
      slides[index].classList.add('active');
      dots[index].classList.add('active');
      if (labels[index]) {
        labels[index].classList.add('active');
      }
      
      currentSlide = index;
    }
    
    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }
    
    function prevSlide() {
      const prev = currentSlide === 0 ? slides.length - 1 : currentSlide - 1;
      showSlide(prev);
    }
    
    function startCarousel() {
      interval = setInterval(nextSlide, 7000); // Change slide every 7 seconds
    }
    
    function stopCarousel() {
      clearInterval(interval);
    }
    
    // Start auto-rotation
    startCarousel();
    
    // Handle dot clicks
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopCarousel();
        showSlide(index);
        startCarousel();
      });
    });
    
    // Handle label clicks
    labels.forEach((label, index) => {
      label.addEventListener('click', () => {
        stopCarousel();
        showSlide(index);
        startCarousel();
      });
    });
    
    // Pause on hover (desktop)
    carousel?.addEventListener('mouseenter', stopCarousel);
    carousel?.addEventListener('mouseleave', startCarousel);
    
    // Touch support for mobile
    carousel?.addEventListener('touchstart', (e: TouchEvent) => {
      touchStartX = e.changedTouches[0].screenX;
      stopCarousel();
    });
    
    carousel?.addEventListener('touchend', (e: TouchEvent) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
      startCarousel();
    });
    
    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          // Swipe left - next slide
          nextSlide();
        } else {
          // Swipe right - previous slide
          prevSlide();
        }
      }
    }
    
    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        stopCarousel();
        prevSlide();
        startCarousel();
      } else if (e.key === 'ArrowRight') {
        stopCarousel();
        nextSlide();
        startCarousel();
      }
    });
  });
</script>