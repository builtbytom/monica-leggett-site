---
/**
 * CMS Content Wrapper Component
 * Makes any content editable through Tom's portal
 * 
 * Usage:
 * <CMSContent id="hero-title" type="text">
 *   Default content here
 * </CMSContent>
 */

export interface Props {
  id: string;           // Unique CMS field ID
  type?: 'text' | 'richtext' | 'image';  // Field type
  tag?: string;         // HTML tag to render (default: div)
  class?: string;       // CSS classes
}

const { 
  id, 
  type = 'text',
  tag = 'div',
  class: className = ''
} = Astro.props;

const Tag = tag as any;

// In production, this would fetch from CMS
// For now, we render the slot content
---

<Tag 
  class={className}
  data-cms={id}
  data-cms-type={type}
>
  <slot />
</Tag>

<style>
  /* Visual indicator for CMS fields in edit mode */
  [data-cms] {
    transition: outline 0.2s ease;
  }
  
  /* When in edit mode, these styles are applied via JS */
  .cms-editable {
    cursor: pointer;
    position: relative;
  }
  
  .cms-editable:hover::before {
    content: '✏️';
    position: absolute;
    top: -8px;
    right: -8px;
    background: #1A3C5D;
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    z-index: 1000;
    opacity: 0;
    animation: fadeIn 0.2s forwards;
  }
  
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>