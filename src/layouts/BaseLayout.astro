---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Monica Leggett - Certified Life Coach, Author, and Speaker. Get unstuck and take action with proven strategies.",
  image = "/images/monica-og-image.jpg" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Monica Leggett</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={image}>
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={image}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="min-h-screen bg-white">
  <!-- Header/Navigation -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <span class="text-2xl font-serif font-bold text-monica-navy">Monica Leggett</span>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/" class="text-monica-dark hover:text-monica-blue transition-colors">Home</a>
          <a href="/about" class="text-monica-dark hover:text-monica-blue transition-colors">About</a>
          
          <!-- Services Dropdown -->
          <div class="relative group">
            <button class="text-monica-dark hover:text-monica-blue transition-colors flex items-center">
              Services
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="bg-white rounded-lg shadow-lg py-2">
                <a href="/services/book" class="block px-4 py-2 text-monica-dark hover:bg-gray-50">Book - Doubtful to Decisive</a>
                <a href="/services/mentor-coaching" class="block px-4 py-2 text-monica-dark hover:bg-gray-50">Mentor Coaching</a>
                <a href="/services/personal-coaching" class="block px-4 py-2 text-monica-dark hover:bg-gray-50">Personal Coaching</a>
                <a href="/services/masterminds" class="block px-4 py-2 text-monica-dark hover:bg-gray-50">Masterminds</a>
              </div>
            </div>
          </div>
          
          <a href="/learning-center" class="text-monica-dark hover:text-monica-blue transition-colors">Learning Center</a>
          <a href="/contact" class="text-monica-dark hover:text-monica-blue transition-colors">Contact</a>
          <a href="/contact#consultation" class="bg-gradient-to-r from-monica-navy to-monica-teal text-white px-6 py-2 rounded-lg font-bold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">Book Consultation</a>
        </div>
        
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden py-4">
        <a href="/" class="block py-2 text-monica-dark hover:text-monica-blue">Home</a>
        <a href="/about" class="block py-2 text-monica-dark hover:text-monica-blue">About</a>
        <a href="/services/book" class="block py-2 pl-4 text-monica-dark hover:text-monica-blue">→ Book</a>
        <a href="/services/mentor-coaching" class="block py-2 pl-4 text-monica-dark hover:text-monica-blue">→ Mentor Coaching</a>
        <a href="/services/personal-coaching" class="block py-2 pl-4 text-monica-dark hover:text-monica-blue">→ Personal Coaching</a>
        <a href="/services/masterminds" class="block py-2 pl-4 text-monica-dark hover:text-monica-blue">→ Masterminds</a>
        <a href="/learning-center" class="block py-2 text-monica-dark hover:text-monica-blue">Learning Center</a>
        <a href="/contact" class="block py-2 text-monica-dark hover:text-monica-blue">Contact</a>
        <a href="/contact#consultation" class="block py-2 text-monica-blue font-semibold">Book Consultation</a>
      </div>
    </nav>
  </header>
  
  <!-- Main Content -->
  <main>
    <slot />
  </main>
  
  <!-- Footer -->
  <footer class="bg-monica-dark text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- About -->
        <div>
          <h3 class="text-lg font-serif font-bold mb-4">Monica Leggett</h3>
          <p class="text-gray-300">Certified Life Coach, Author, and Speaker helping you get unstuck and take action.</p>
        </div>
        
        <!-- Quick Links -->
        <div>
          <h3 class="text-lg font-serif font-bold mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="/about" class="text-gray-300 hover:text-white">About Monica</a></li>
            <li><a href="/services/book" class="text-gray-300 hover:text-white">Buy the Book</a></li>
            <li><a href="/learning-center" class="text-gray-300 hover:text-white">Learning Center</a></li>
          </ul>
        </div>
        
        <!-- Services -->
        <div>
          <h3 class="text-lg font-serif font-bold mb-4">Services</h3>
          <ul class="space-y-2">
            <li><a href="/services/personal-coaching" class="text-gray-300 hover:text-white">Personal Coaching</a></li>
            <li><a href="/services/mentor-coaching" class="text-gray-300 hover:text-white">Mentor Coaching</a></li>
            <li><a href="/services/masterminds" class="text-gray-300 hover:text-white">Masterminds</a></li>
            <li><a href="/contact#consultation" class="text-gray-300 hover:text-white">Free Consultation</a></li>
          </ul>
        </div>
        
        <!-- Newsletter -->
        <div>
          <h3 class="text-lg font-serif font-bold mb-4">Join Our Community!</h3>
          <p class="text-gray-300 mb-4">Get monthly insights and tips for personal growth and transformation.</p>
          <form class="space-y-2">
            <input 
              type="email" 
              placeholder="Your email"
              class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded text-white placeholder-gray-400 focus:outline-none focus:border-white/40"
            >
            <button type="submit" class="w-full btn-secondary">Subscribe</button>
          </form>
        </div>
      </div>
      
      <div class="border-t border-white/20 mt-8 pt-8 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Monica Leggett. All rights reserved.</p>
        <p class="mt-2">
          Website by <a href="https://cmmct.com" class="text-monica-blue hover:text-blue-400">Craft My Marketing</a>
        </p>
      </div>
    </div>
  </footer>
  
  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>